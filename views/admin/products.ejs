<%- include('head/header') %>

<div id="page-content-wrapper">
    <div class="container" style="margin-left: 248px;">
      <div class="row mt-5">
        <div class="col-lg-12">
          <h1>PRODUCTS</h1>
          <a href="/products/add"><button type="button" class="btn btn-outline-success float-end mb-2">Add Products</button></a>
          <% if (locals.message) { %>
           <div class="alert alert-dismissible fade show alert-<%= message.type%>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
            <strong><%= message.message %></strong>
          </div>
          <% } %>
          <% if (data!='') { %>
            <table class="table border">
              <thead>
                <tr>
                  <th scope="col">sl.no</th>
                  <th scope="col">Image</th>
                  <th scope="col">Title</th>
                  <th scope="col">Price</th>
                  <th scope="col">Brand</th>
                  <th scope="col">Category</th>
                  <th scope="col">Stock left</th>
                  <th scope="col">Description</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach((row,index) => { %>
                  <tr>
                    <td><%= index+1 %></td>
                    <td><img width="50" src="<%= row.image[0] %>" ></td>
                    <td><%= row.name %></td>
                    <td><%= row.price %></td>
                    <td><%= row.brandId.name?row.brandId.name:'Brand name' %></td>
                    <td><%= row.categorieId ? row.categorieId.name:'N/A' %></td>
                    <td><%= row.stock %></td>
                    <td><%= row.description %></td>
                    <td class="d-flex p-4"><a href="/products/update/<%= row._id %>"><i class="fa-solid fa-pen-to-square text-success me-1"></i></a>
                      <a href="/products/delete/<%= row._id %>" onclick=" return confirm('Are you sure ?')"><i
                      class="fa-solid fa-trash text-danger ms-5"></i></a>
                    </td>
                    
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% }else{ %>
            <div class="text-center text-secondary mt-5">
              <h1>No Products found in the Database</h1>
          </div>
            <% } %>
            <ul class="pagination" style="margin-left: 47%;">
              <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %> m-1">
                  <a class="page-link" href="/products?page=<%= i %>"><%= i %></a>
                </li>
              <% } %>
            </ul>
             

        </div>
      </div>
    </div>
  </div>

<%- include('head/footer') %>
