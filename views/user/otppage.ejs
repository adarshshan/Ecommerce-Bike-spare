<%- include('head/header') %>

    <section style="background-color: #f7efef;">
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card border-0 shadow rounded-3 my-5">
                        <div class="card-body p-4 p-sm-5">
                            <h3 class="card-title "></h3>
                            <small><b>Enter your One Time password</b></small>
                            <form action="/users/verifyOtp" method="post">


                                <div class="form-floating mb-3 mt-5">
                                    <input type="text" class="form-control" name="otp"
                                        placeholder="">
                                    <label for="floatingInput">Enter the OTP</label>
                                </div>
                                <br>
                                <% if (locals.msg) { %>
                                    <div class="alert alert-dismissible fade show alert-<%= type %>" role="alert">
                                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                                        <strong><%= msg %></strong>
                                      </div>
                                <% } %>
                                <input type="submit" class="btn btn-primary p-3 mt-3" value="submit">
                            </form>
                            <form class="mt-3" action="/users/resendtpVerficationCode" method="post">
                                <input class="btn btn-danger" type="submit" value="resend otp?">
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <%- include('head/footer') %>