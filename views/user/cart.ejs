<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>user-dashboard</title>
    <link rel="stylesheet" href="/static/user.css">
    <script src="https://kit.fontawesome.com/718fa3d4ba.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand fs-1 fw-normal ms-4 text-white" href="/persons">Spare<span
                        class="text-dark">KIT</span></a>
                <form class="d-flex ms-5">
                    <input class="inp rounded-pill p-2" type="search" placeholder="Search">
                    <button class="btn" type="submit"></button>
                </form>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav ms-auto fs-5 mb-2 mb-lg-0">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                My Account
                                <i class="fa-solid fa-user"></i>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-user"></i> My Profile</a></li>
                                <% if (!locals.NoUser) { %>
                                    <li><a class="dropdown-item" href="/users/signup">Sign Up</a></li>
                                <% } %>
                                <li><a class="dropdown-item" href="#">Wish List</a></li>
                                <li><a class="dropdown-item" href="#">Orders</a></li>
                                <li><a class="dropdown-item" href="#">contact</a></li>
                                <% if (locals.NoUser) { %>
                                    <li><a class="dropdown-item" href="/users/logout"
                                        onclick="return confirm('are you sure ?')">logout</a></li>
                                <% } %>
                                
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <style>
        .card-header {
            box-shadow: 5px 4px 5px rgb(143, 194, 207);
        }

        .card-body {
            box-shadow: 5px 3px 5px gainsboro;
        }
    </style>
    <section class="h-100 gradient-custom">
        <div class="container py-5">
            <div class="row d-flex justify-content-center my-4">
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 id="totalProducts" class="mb-0">(<%= totalProducts %>)items</h5>
                        </div>
                        <% if (cartList && cartList.length) { %>
                            <% cartList.forEach(cartItem=> { %>
                                <% cartItem.products.forEach(productItem=> { %>


                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                                <!-- Image -->
                                                <div class="bg-image hover-overlay hover-zoom ripple rounded"
                                                    data-mdb-ripple-color="light">
                                                    <img src="<%= productItem.productId.image[0] %>" class="w-100"
                                                        alt="Blue Jeans Jacket" />
                                                    <a href="#!">
                                                        <div class="mask"
                                                            style="background-color: rgba(251, 251, 251, 0.2)">
                                                        </div>
                                                    </a>
                                                </div>
                                                <!-- Image -->
                                            </div>

                                            <div class="col-lg-5 col-md-6 mt-4 mb-lg-0">
                                                <!-- Data -->
                                                <p><strong>
                                                        <%= productItem.productId.name %>
                                                    </strong></p>
                                                <a href="/carts/remove/<%= productItem.productId._id %>"
                                                    onclick="return confirm('Are you sure you want to remove this item?')"
                                                    class="btn btn-primary btn-sm me-1 mb-2"><i
                                                        class="fas fa-trash"></i></a>

                                                <button type="button" class="btn btn-danger btn-sm mb-2"
                                                    data-mdb-toggle="tooltip" title="Move to the wish list">
                                                    <i class="fas fa-heart"></i>
                                                </button>
                                                <!-- Data -->
                                            </div>

                                            <div class="col-lg-4 col-md-6  mb-lg-0">
                                                <!-- Quantity -->
                                                <div class="d-flex mt-5" style="max-width: 300px">
                                                    <button class="decrement-button btn btn-primary px-3 ms-2"
                                                        data-product-id="<%= productItem.productId._id %>"
                                                        onclick="decreaseProductQuantity('<%= productItem.productId._id%>','<%= productItem.productId.price %>')">
                                                        <i class="fas fa-minus mt-3"></i>
                                                    </button>
                                                    <div class="form-outline">
                                                        <input id="form<%= productItem.productId._id %>" min="0"
                                                            name="quantity" value="<%= productItem.quantity %>"
                                                            type="number" class="form-control" />
                                                        <label class="form-label" for="form1">Quantity</label>
                                                    </div>
                                                    <button class="increment-button btn btn-primary px-3 ms-2"
                                                        data-product-id="<%= productItem.productId._id %>"
                                                        onclick="increaseProductQuantity('<%= productItem.productId._id%>','<%= productItem.productId.price %>')">
                                                        <i class="fas fa-plus mt-3"></i>
                                                    </button>
                                                </div>
                                                <!-- Quantity -->

                                                <!-- Price -->
                                                <p class="text-start text-md-center disp"
                                                    id="totalproductPrice<%=productItem.productId._id %>">
                                                    <strong id=`totalproductPrice<%=productItem.productId._id %>`>
                                                        <%= productItem.productId.price*productItem.quantity %>
                                                    </strong>
                                                </p>
                                                <!-- Price -->
                                            </div>
                                        </div>
                                        <!-- Single item -->

                                        <hr class="my-4" />





                                    </div>
                                    <% }); %>
                                        <% }); %>
                                            <% }else{ %>
                                                <div class="text-center text-secondary mt-5">
                                                    <h1>No Products found in the Database</h1>
                                                </div>
                                                <% } %>
                    </div>
                    <div class="card mb-4">
                        <div class="card-body">
                            <p><strong>Expected shipping delivery</strong></p>
                            <p class="mb-0">12.10.2020 - 14.10.2020</p>
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body">
                            <p><strong>We accept</strong></p>
                            <img class="me-2" width="45px"
                                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                                alt="Visa" />
                            <img class="me-2" width="45px"
                                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                                alt="American Express" />
                            <img class="me-2" width="45px"
                                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                                alt="Mastercard" />
                            <img class="me-2" width="45px"
                                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce/includes/gateways/paypal/assets/images/paypal.webp"
                                alt="PayPal acceptance mark" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Summary</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Price(<%= totalProducts %> items)
                                        <span id="actualamount">
                                            <%= totalAmount %>
                                        </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Discount
                                    <span>0</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Shipping
                                    <span>Free</span>
                                </li>
                                <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Total amount</strong>
                                        <strong>
                                            <p class="mb-0">(including VAT)</p>
                                        </strong>
                                    </div>
                                    <span><strong id="totalAmount">Rs.<%= totalAmount %></strong></span>
                                </li>
                            </ul>
                            <a href="/users/checkout">
                                <button type="button" class="btn btn-primary btn-lg btn-block">
                                    Go to checkout
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        function increaseProductQuantity(productId, productPrice) {
            fetch(`/carts/increaseCount/${productId}`, {
                method: 'GET'
            }).then((response) => {
                if (!response.ok) {
                    console.log('there is an error...')
                    throw new Error('Network response was not ok');
                }
                console.log(response)
                return response.json();
            })
                .then((data) => {
                    let total = data.productQuantity * productPrice
                    let quantity = data.productQuantity
                    let totalAmount = data.totalAmount
                    let totalProducts = data.totalProducts

                    const quantityInput = document.getElementById(`form${productId}`);
                    if (quantityInput) {
                        quantityInput.value = quantity;
                    }
                    const totalPriceElement = document.getElementById(`totalproductPrice${productId}`);
                    if (totalPriceElement) {
                        totalPriceElement.innerHTML = total;
                    }
                    const totalAmountElement = document.getElementById('totalAmount')
                    if (totalAmountElement) {
                        totalAmountElement.innerHTML = totalAmount
                    }
                    const totalProductsElement = document.getElementById('totalProducts')
                    if (totalProductsElement) {
                        totalProductsElement.innerHTML = `(${totalProducts})items`
                    }
                    const taem = document.getElementById('actualamount')
                    if (taem) {
                        taem.innerHTML = totalAmount
                    }
                })
                .catch(error => {
                    console.error('Error increasing product quantity:', error);
                });
        }

        function decreaseProductQuantity(productId, productPrice) {
            fetch(`/carts/decreaseCount/${productId}`, {
                method: 'GET'
            }).then((response) => {
                if (!response.ok) {
                    console.log('there is an error...')
                    throw new Error('Network response was not ok');
                }
                console.log(response)
                return response.json();
            })
                .then((data) => {
                    let total = data.productQuantity * productPrice
                    let quantity = data.productQuantity
                    let totalAmount = data.totalAmount
                    let totalProducts = data.totalProducts

                    const quantityInput = document.getElementById(`form${productId}`);
                    if (quantityInput) {
                        quantityInput.value = quantity;
                    }
                    const totalPriceElement = document.getElementById(`totalproductPrice${productId}`);
                    if (totalPriceElement) {
                        totalPriceElement.innerHTML = total;
                    }
                    const totalAmountElement = document.getElementById('totalAmount')
                    if (totalAmountElement) {
                        totalAmountElement.innerHTML = totalAmount
                    }
                    const totalProductsElement = document.getElementById('totalProducts')
                    if (totalProductsElement) {
                        totalProductsElement.innerHTML = `(${totalProducts})items`
                    }
                    const taem = document.getElementById('actualamount')
                    if (taem) {
                        taem.innerHTML = totalAmount
                    }
                })
                .catch(error => {
                    console.error('Error increasing product quantity:', error);
                });
        }
    </script>
    <%- include('head/footer') %>