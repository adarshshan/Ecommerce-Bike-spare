<%- include('head/header') %>
    <style>
        .thumbnail-item {
            border: 2px solid #ccc;
            margin-right: 10px;
            cursor: pointer;
        }

        .thumbnail-item.active {
            border-color: #007bff;
        }
    </style>
    <div class="container">
        
        <div class="row">
            <div class="col-md-6">
                <div id="productCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img style="height: 500px;" src="<%= imgUri %><%= products.image[0] %>"
                                class="d-block w-75" alt="Product Image 1">
                        </div>
                        <% for( let i = 1; i < products.image.length; i++ ) { %>
                            <div class="carousel-item">
                                <img style="height: 500px;" src="<%= imgUri %><%= products.image[i] %>"
                                    class="d-block w-75" alt="Product Image 1">
                            </div>
                        <% } %>
                        
                        <!-- Add more carousel items for additional images -->
                    </div>
                    <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="row mt-3 center mb-3">
                    <div class="col">
                        <img style="height: 80px; width: 80px;"
                            src="<%= imgUri %><%= products.image[0] %>" class="thumbnail-item active"
                            alt="Thumbnail 1">
                        <% for( let i = 1; i < products.image.length; i++ ) { %>
                            <img style="height: 80px; width: 80px;"
                            src="<%= imgUri %><%= products.image[i] %>" class="thumbnail-item"
                            alt="Thumbnail 1">
                        <% } %>
                       
                        
                        <!-- Add more thumbnail items for additional images -->
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-5">
                <h1><%= products.name %></h1>
                <p><%= products.description %></p>
                <p><strong>Price: $<%= products.price %></strong></p>
                <p><strong>Availability: In Stock   </strong><%= products.stock %><b>  Nos</b></p>
                <p><strong>Brand:<%= brandName %></strong></p>
                <p><strong>Category: <%= categoryName %> </strong></p>
                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="number" class="form-control" id="quantity" value="1">
                </div>
                <div class="d-flex mt-4">
                    <button class="btn btn-warning p-3 fw-bold">Add to Cart</button>
                    <button class="btn btn-success p-3 fw-bold ms-3">Buy Now</button>
                </div>

            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
