    <script>
        function sharePage() {
            Swal.fire({
                title: "Enter the Email you want to share the page",
                input: "text",
                inputAttributes: {
                    autocapitalize: "off"
                },
                showCancelButton: true,
                confirmButtonText: "Share link",
                showLoaderOnConfirm: true,
                preConfirm: async (email) => {
                    try {
                        const githubUrl = `/share-link/${email}`;
                        const response = await fetch(githubUrl, { method: 'get' });
                        if (!response.ok) {
                            return Swal.showValidationMessage(`${JSON.stringify(await response.json())} `);
                        }
                        const resBody = await response.json();
                        if (!resBody.success) {
                            Swal.fire({
                                title: `Email has been send succesfully`
                            });
                        }
                    } catch (error) {
                        Swal.showValidationMessage(`Request failed: ${error}`);
                    }
                },
                allowOutsideClick: () => !Swal.isLoading()
            })
        }

        async function logOut() {
            Swal.fire({
                title: "Log out?",
                text: "",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Log out!"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/users/logout`, { method: 'get' }).then((response) => {
                        if (!response.ok) {
                            console.log('there is an error...')
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    }).then((resBody) => {
                        if (resBody.success) {
                            Swal.fire({
                                title: "Logged out!",
                                text: "Visit again, Thank you.",
                                icon: "success"
                            });
                            setTimeout(() => {
                              location.href = '/';
                            }, 1000);
                        } else {
                            alert(resBody.message)
                        }
                    })
                }
            });
        }
    </script>

