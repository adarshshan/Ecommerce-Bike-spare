<%- include('head/header') %>
<style>
    a :hover{
        background: rgb(97, 97, 96);
        color: rgb(250, 249, 249);
    }
</style>
    <div class="container-fluid"  style="background-color: #f7efef;">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar fs-5 fw-normal" >
                <div class="position-sticky">
                        <a class="nav-link text-dark" href="/profile">
                            <div class="nav-item p-3">
                            My Account
                            </div>
                        </a>
                        <a class="nav-link text-dark" href="/carts/orders">
                            <div class="nav-item p-3">
                            Orders
                            </div>
                        </a>
                        <a class="nav-link text-dark" href="#">
                            <div class="nav-item p-3">
                            wishlist
                            </div>
                        </a>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Ordered Products</h1>
                </div>
                <div class="col-md-12 container mb-5 pb-5" id="produc">
                    <% products.forEach((row,index) => { %>
                        <div class="row border p-5 mb-4 fs-4 bg-light">
                            <div class="col-12 col-md-3"><img style="height: 100px; width: 100px;" src="http://localhost:3000/<%= row.product.productImage %>" alt=""></div>
                            <div class="col-md-2"><p><%= row.product.productName %></p></div>
                            <div class="col-md-2"><p><%= row.product.productPrice %></p></div>
                            <div class="col-md-2"><p><%= row.product.quantity %></p></div>
                            <div class="col-md-2"><p><%= row.product.status %></p></div>
                        </div>
                    <% }) %>
                    
                </div>
            </main>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>

    </script>

    <%- include('head/footer') %>